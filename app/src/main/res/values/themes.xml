<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.To_Do_Sql" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#0A031B</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="appDarkTheme" parent="Theme.AppCompat.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#4CAF50</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="TimePickerStyle" parent="@android:style/Widget.Material.Light.TimePicker">

        <item name="android:headerBackground">#355C7D</item>
        <item name="android:numbersSelectorColor">#CC527A</item>
        <item name="android:numbersTextColor">@android:color/white</item>
        <item name="android:numbersBackgroundColor">#363636</item>
        <item name="android:timePickerMode">spinner</item>
    </style>

    <style name="AppTheme.AppBarTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">25sp</item>
        <item name="fontFamily">Beck</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.09</item>
    </style>


</resources>